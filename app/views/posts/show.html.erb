<h1><%= @post.date %></h1>
<% if current_user.id ==  @post.user_id %>
<p>
  <%= link_to "Edit Post", [:edit, @post], class: "btn btn-primary btn-sm" %>
  <%= link_to "Delete Post", @post, data: { method: "delete", confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
  <%= link_to "All QC List", posts_path ,:class=>"btn btn-info btn-sm" %>
</p>
<% end %>
<p>
  <%= attachment_image_tag(@post, :image, :fill, 200, 200) %>
</p>



<table class="table table-bordered">
  <thead>
    <tr>
      <th>Date</th>
      <th>QC Done</th>
      <th>Description</th>
      <th>Overtime</th>
      <th>Filename</th>
      <th>Content type</th>
      <th>Size</th>
    </tr>
  </thead>

  <tbody>
    <% @post.documents.each do |document| %>
      <tr>
        <th><%= @post.date  %></th>
        <th><%= @post.qc_done %></th>
        <th><%= @post.description %></th>
        <th><%= @post.overtime%> </th>
        <th><%= link_to document.file_filename, attachment_url(document, :file) %></th>
        <th><%= document.file_content_type %></th>
        <th><%= number_to_human_size document.file_size %></th>
      </tr>
    <% end %>
  </tbody>

</table>