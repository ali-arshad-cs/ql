<div class="row">
  <div class="col-md-8">
    <%= form_for @post do |form| %>

        <div class="form-group">
        <%= form.label :date %>
        <%= form.text_field :date, class: "form-control" ,placeholder: "mm/dd/2017" %>
        <%= field_errors(@post, :date) %>
      </div>

        <div class="form-group">
          <%= form.label :QC_Done %>
          <%= form.text_field :qc_done, class: "form-control", placeholder: "50" %>
          <%= field_errors(@post, :qc_done) %>
        </div>


        <div class="form-group">
          <%= form.label :overtime %>
          <%= form.number_field :overtime, class: "form-control", placeholder: "0"%>
          <%= field_errors(@post, :overtime) %>
        </div>

        <!--<div class="form-group">-->
          <!--<%#= form.label :select_user %>-->
          <!--<%#= form.collection_select(:user_id, User.all, :id, :email) %>-->
          <!--<%#= field_errors(@post, :overtime) %>-->
        <!--</div>-->

        <div class="form-group">
          <%= form.label :description %>
          <%= form.text_area :description, class: "form-control",size: "30x10"%>
          <%= field_errors(@post, :description) %>
        </div>

      <div class="form-group">
        <%= form.label :documents_files, "Documents" %>
        <%= form.attachment_field :documents_files, multiple: true, presigned: true, host: request.base_url %>
        <%#= form.attachment_field :documents_files, multiple: true %>
        <%= field_errors(@post, :documents_files) %>
      </div>

      <div class="form-group">
        <%= form.submit "Create Post", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>